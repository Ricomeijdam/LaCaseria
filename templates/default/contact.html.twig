{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <!--Section: Contact v.1-->
    <section class="section pb-5">

        <!--Section heading-->
        <h2 class="section-heading h1 pt-4">Bericht ons:</h2>
        <!--Section description-->
        <form method="post">
        <div class="row">

            <!--Grid column-->
            <div class="col-lg-5 mb-4">

                <!--Form with header-->
                <div class="card">

                    <div class="card-body">
                        <!--Header-->
                        <div class="form-header blue accent-1">
                            <p class="section-description pb-4">Heeft uw vragen? stuur ons gerust een mailtje.</p>
                        </div>

                        <!--Body-->
                        <div class="form-group">
                            <i class="fas fa-user prefix grey-text"></i>
                            <input type="text" id="form-name" class="form-control" placeholder="Voornaam" required>
                        </div>

                        <div class="form-group">
                            <i class="fas fa-user prefix grey-text"></i>
                            <input type="text" id="form-name" class="form-control" placeholder="Achternaam" required>
                        </div>

                        <div class="form-group">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <input type="text" id="form-email" class="form-control" placeholder="Email" required>
                        </div>

                        <div class="form-group">
                            <i class="fas fa-pencil-alt prefix grey-text"></i>
                            <textarea id="form-text" class="form-control md-textarea" rows="3" placeholder="Bericht" required></textarea>
                        </div>

                        <div class="text-center mt-4">
                            <button class="btn btn-info">Submit</button>
                        </div>

                    </div>

                </div>
                <!--Form with header-->

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-lg-7">

                <!--Google map-->
                    <div id="map-container-google-11" class="z-depth-1-half map-container-6">
                    <iframe src="https://maps.google.com/maps?q=madrid%spain&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
            <!--Grid column-->
        </div>
        </form>
    </section>
    <!--Section: Contact v.1-->
{% endblock %}